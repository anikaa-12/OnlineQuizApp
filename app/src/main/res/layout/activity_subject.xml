<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/soft_blue"
    android:padding="24dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="end">

        <Button
            android:id="@+id/btnLogout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Logout"
            android:backgroundTint="@color/darker_blue"
            android:textColor="@color/white"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center">

        <TextView
            android:id="@+id/tvSelectSubject"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Select Subject"
            android:textSize="30sp"
            android:textStyle="bold"
            android:textColor="@color/muted_blue"
            android:layout_marginBottom="40dp"/>

        <Button
            android:id="@+id/btnJava"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Java"/>

        <Button
            android:id="@+id/btnIsd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Information System Design and Software Engineering"
            android:layout_marginTop="16dp"/>

        <Button
            android:id="@+id/btnMicro"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Microprocessor"
            android:layout_marginTop="16dp"/>

    </LinearLayout>

</LinearLayout>